{
  "i18n": true,
  "type": "tabs",
  "items": [
    {
      "type": "panel",
      "label": "tab_general",
      "items": {
        "_header": { "type": "header", "text": "header_title" },

        "_info": {
          "type": "staticText",
          "text": "general_info"
        },

        "delays": {
          "type": "panel",
          "label": "section_delays",
          "items": {
            "exitDelaySec": { "type": "number", "label": "label_exitDelaySec", "min": 0, "max": 600 },
            "entryDelaySec": { "type": "number", "label": "label_entryDelaySec", "min": 0, "max": 600 },
            "preAlarmSec": { "type": "number", "label": "label_preAlarmSec", "min": 0, "max": 600 },
            "alarmDurationSec": { "type": "number", "label": "label_alarmDurationSec", "min": 0, "max": 3600 },
            "chirpSec": { "type": "number", "label": "label_chirpSec", "min": 0, "max": 60 },
            "debounceMsDefault": { "type": "number", "label": "label_debounceMsDefault", "min": 0, "max": 60000 }
          }
        },

        "behavior": {
          "type": "panel",
          "label": "section_behavior",
          "items": {
            "blockArmingIfOpen": { "type": "checkbox", "label": "label_blockArmingIfOpen" },
            "autoBypassOpenOnArming": { "type": "checkbox", "label": "label_autoBypassOpenOnArming" },
            "useBaselineSnapshot": { "type": "checkbox", "label": "label_useBaselineSnapshot" }
          }
        }
      }
    },

    {
      "type": "panel",
      "label": "tab_devices",
      "items": {
        "_devices_info": {
          "type": "staticText",
          "text": "devices_info"
        },

        "sensors": {
          "type": "table",
          "label": "section_sensors",
          "newLine": true,
          "items": [
            { "name": "name", "type": "text", "title": "label_name" },

            {
              "name": "stateId",
              "type": "objectId",
              "title": "label_stateId",
              "filter": "state"
            },

            {
              "name": "type",
              "type": "select",
              "title": "label_sensorType",
              "default": "contact",
              "options": [
                { "value": "contact", "label": "sensor_type_contact" },
                { "value": "motion", "label": "sensor_type_motion" },
                { "value": "vibration", "label": "sensor_type_vibration" },
                { "value": "custom", "label": "sensor_type_custom" }
              ]
            },

            {
              "name": "policy",
              "type": "select",
              "title": "label_policy",
              "default": "instant",
              "options": [
                { "value": "instant", "label": "policy_instant" },
                { "value": "entryDelay", "label": "policy_entryDelay" },
                { "value": "silent", "label": "policy_silent" }
              ]
            },

            { "name": "invert", "type": "checkbox", "title": "label_invert", "default": false },

            {
              "name": "debounceMs",
              "type": "number",
              "title": "label_debounceMsOverride",
              "min": 0,
              "max": 60000,
              "allowEmpty": true
            },

            { "name": "bypassable", "type": "checkbox", "title": "label_bypassable", "default": true },

            {
              "name": "modeMask",
              "type": "multiselect",
              "title": "label_modeMask",
              "options": [
                { "value": "perimeter", "label": "mode_perimeter" },
                { "value": "full", "label": "mode_full" }
              ],
              "default": ["full", "perimeter"]
            }
          ]
        },

        "outputs": {
          "type": "table",
          "label": "section_outputs",
          "newLine": true,
          "items": [
            { "name": "name", "type": "text", "title": "label_name" },

            {
              "name": "stateId",
              "type": "objectId",
              "title": "label_actorStateId",
              "filter": "state"
            },

            {
              "name": "type",
              "type": "select",
              "title": "label_outputType",
              "default": "siren",
              "options": [
                { "value": "siren", "label": "output_type_siren" },
                { "value": "light", "label": "output_type_light" },
                { "value": "notification", "label": "output_type_notification" },
                { "value": "custom", "label": "output_type_custom" }
              ]
            },

            { "name": "activeValue", "type": "text", "title": "label_activeValue", "default": "true" },
            { "name": "inactiveValue", "type": "text", "title": "label_inactiveValue", "default": "false" }
          ]
        }
      }
    }
  ]
}
